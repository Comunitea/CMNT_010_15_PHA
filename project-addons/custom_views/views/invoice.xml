<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="account_invoice_tree_customviews" model="ir.ui.view">
            <field name="name">account.invoice.tree.customviews</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_tree"/>
            <field name="priority">17</field>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="supplier_invoice_number" invisible="context.get('journal_type') == 'sale'"/>
                    <field name="type"/>
                </field>
                <field name="agent_code" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
            </field>
        </record>
    </data>
</openerp>
