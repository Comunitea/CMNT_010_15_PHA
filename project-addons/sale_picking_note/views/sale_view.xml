<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="order_form_sale_picking_note" model="ir.ui.view">
            <field name="name">order.form.sale.picking.note</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <field name="note" position="replace">
                    <group colspan="4">
                        <field name="sale_dept_note" placeholder="Sale Department note..."/>
                        <field name="internal_note" placeholder="Internal note..."/>
                        <field name="note" placeholder="Terms and conditions..."/>
                    </group>
                </field>
                <field name="partner_shipping_id" position="attributes">
                    <attribute name="on_change">_onchange_partner_shipping_id(partner_shipping_id)</attribute>
                </field>
            </field>
        </record>
    </data>
</openerp>