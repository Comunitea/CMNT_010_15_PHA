<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="create_ean13_wizard" model="ir.ui.view">
            <field name="name">Adding new EAN13 code</field>
            <field name="model">create.ean13.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <separator string="Adding new EAN13 code"/>
                    <group>
                        <field name="ean13"/>
                    </group>
                    <footer class="oe_right oe_button_box">
                        <button string="Continue" name="create_ean13"
                                type="object" icon="gtk-ok"/>
                        <button string="Cancel" special="cancel"
                                icon="gtk-cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</openerp>