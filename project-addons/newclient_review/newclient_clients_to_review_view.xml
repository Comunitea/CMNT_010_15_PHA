<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    <record id="newclient_clients_to_review_tree" model="ir.ui.view">
        <field name="name">res.partner.tree</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"></field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
           <field name="display_name" position="after">
	           <field name="date"/>
	           <field name="city"/>
	           <field name="user_id"/>
	       </field>
           <field name="email" position="replace"/>
           <field name="phone" position="replace"/>
        </field>
    </record>
    <record model="ir.actions.act_window" id="action_newclient_clients_to_review">
        <field name="name">Partners to review</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree</field>
    </record>
    <menuitem name="Clientes a revisar" parent="base.menu_sales" sequence="3" action="action_newclient_clients_to_review" id="partner_review_menu"/>
    </data>
</openerp>