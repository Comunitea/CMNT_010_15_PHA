<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
     <record model="ir.ui.view" id="newclient_clients_to_review_tre">
        <field name="name">partner.review.custom.tree</field>
        <field name="model">res.partner</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
	        <tree string="">
		           <field name="name"/>
		           <field name="date"/>
		           <field name="city"/>
		           <field name="user_id"/>
		    </tree>
	    </field>
    </record>
    <record model="ir.ui.view" id="newclient_clients_to_review_filter">
        <field name="name">partner.review.custom.search</field>
        <field name="model">res.partner</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
        	<search string="">
                <field name="name"/>
                <field name="city"/>
                <field name="date"/>

                <group expand="0" string="Group By">
                        <filter string="Nombre" context="{'group_by':'name'}"/>
                        <filter string="Ciudad" context="{'group_by':'city'}"/>
                        <filter string="Fecha" context="{'group_by':'date'}"/>
                </group><!-- <form create="false" edit="false" version="7.0" -->
           </search>
	    </field>
    </record>
    <record model="ir.actions.act_window" id="action_newclient_clients_to_review">
        <field name="name">Partners to review</field>
        <field name="model">res.partner</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="newclient_clients_to_review_tre"/>
         <field name="search_view_id" ref="newclient_clients_to_review_filter"/>
    </record>
    <menuitem name="Clientes a revisar" sequence="3" parent="base.menu_sales"
    	action="action_newclient_clients_to_review" id="partner_review_menu_"/>
    </data>
</openerp>