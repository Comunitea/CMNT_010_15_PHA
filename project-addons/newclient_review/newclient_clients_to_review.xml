<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

    <record id="newclient_clients_to_review_tree" model="ir.ui.view">
        <field name="name">newclient.clients.to.review.tree</field>
        <field name="model">partner.review</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Partners to review">
                <field name="partner_id"/>
                <field name="name"/>
                <field name="state"/>
                <field name="city"/>
                <field name="type"/>
                <field name="date"/>
            </tree>
        </field>
    </record>

    <record id="newclient_clients_to_review_form" model="ir.ui.view">
        <field name="name">newclient.clients.to.review.form</field>
        <field name="model">partner.review</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Partners to review">
                <sheet>
                    <group>
                        <field name="partner_id"/>
                        <field name="name"/>
                        <field name="state"/>
                        <field name="city"/>
                    </group>
                    <group>
                        <field name="type"/>
                        <field name="date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="newclient_clients_to_review_filter" model="ir.ui.view">
        <field name="name">newclient.clients.to.review.filter</field>
        <field name="model">partner.review</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search string="">
                <field name="partner_id"/>
                <field name="pricelist_id"/>
                <field name="state"/>
                <field name="type"/>
                <field name="city"/>
                <field name="date"/>
                <group expand="0" string="Group By">
                        <filter string="Partner" context="{'group_by':'partner_id'}"/>
                        <filter string="Pricelist" context="{'group_by':'pricelist_id'}"/>
                        <filter string="Type" context="{'group_by':'type'}"/>
                        <filter string="Date" context="{'group_by':'date'}"/>
                </group>
           </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_newclient_clients_to_review">
        <field name="name">Partners to review</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">partner.review</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="newclient_clients_to_review_tree"/>
        <field name="search_view_id" ref="newclient_clients_to_review_filter"/>
    </record>

    <menuitem name="Partners to review" parent="base.menu_base_config" action="action_newclient_clients_to_review" id="partners_to_review"/>

    </data>
</openerp>
