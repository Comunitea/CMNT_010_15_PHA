<templates id="template" xml:space="preserve">
    <t t-extend="ListView.buttons">
        <t t-jquery="button.oe_list_add" t-operation="after">
            <t t-if="widget.model == 'mrp.calendar.days'">
                <button class="oe_button oe_highlight oe_custom_calendars_create_calendar"
                        type="button">Create calendar</button>
                <button class="oe_button oe_custom_calendars_fixed_shifts"
                        type="button">Fixed shifts</button>
                <button class="oe_button oe_custom_calendars_set_holidays"
                        type="button">Set holidays</button>
            </t>
        </t>
    </t>
