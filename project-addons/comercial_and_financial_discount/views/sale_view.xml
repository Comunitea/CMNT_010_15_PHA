<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_order_form_inherit" model="ir.ui.view">
            <field name="name">sale.order.form.inherit</field>
            <field name="model">sale.order</field>
            <field name="priority">25</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
            	<field name="amount_untaxed" position="replace">
                    <field name="amount_gross_untaxed" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                    <field name="article_discount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                    <div class="oe_inline">
                        <field name="comercial_discount_display"
                               nolabel="1"
                               style="padding-right: 8px; font-weight: bold; white-space: nowrap;"/>
                    </div>
                    <field name="comercial_discount_amount"
                           nolabel="1"
                           widget="monetary"
                           options="{'currency_field': 'currency_id'}"/>
                    <field name="amount_net_untaxed"
                           widget="monetary"
                           options="{'currency_field': 'currency_id'}"/>
                    <div class="oe_inline">
                        <field name="financial_discount_display"
                               nolabel="1"
                               style="padding-right: 8px; font-weight: bold; white-space: nowrap;"/>
                    </div>
                    <field name="financial_discount_amount"
                           nolabel="1"
                           widget="monetary"
                           options="{'currency_field': 'currency_id'}"/>
                    <field name="amount_subtotal_untaxed"
                           widget="monetary"
                           options="{'currency_field': 'currency_id'}"/>
            		<field name="amount_tax_with_discounts"
                           widget="monetary"
                           options="{'currency_field': 'currency_id'}" />
                </field>
            	<field name="amount_tax" position="replace"></field>
                <xpath expr="//group[@name='sale_total']" position="after">
                    <group style="width: 65%%">
                        <label for="comercial_discount_percentage"/>
                        <div>
                            <field name="comercial_discount_percentage" class="oe_inline" attrs="{'invisible':[('state','not in',('draft','sent'))]}"/>
                        </div>
                        <label for="financial_discount_percentage"/>
                        <div>
	                        <field name="financial_discount_percentage" class="oe_inline"/>
                        </div>
                        <label for="generate_discounts"></label>
                        <div>
                            <button name="generate_discounts" string="Generate discounts"
                                attrs="{'invisible':[('state','not in',('draft','sent'))]}"
                                class="oe_edit_only" type="object"/>
                            <label string="If you don't 'Generate comercial discount', the exact discount will be computed when invoicing based on delivery order(s)."
                                class="oe_edit_only"
                                attrs="{'invisible':['|', ('comercial_discount_percentage', '=', 0), ('state','not in',('draft','sent'))]}"/>
                        </div>
                    </group>
            	</xpath>
                <label for="amount_total" position="attributes">
                    <attribute name="for">amount_total_with_discounts</attribute>
                </label>
                <field name="amount_total" position="replace">
                    <field name="amount_total_with_discounts"
                           nolabel="1"
                           class="oe_subtotal_footer_separator"
                           widget='monetary'
                           options="{'currency_field': 'currency_id'}"/>
                </field>
            </field>
        </record>

        <record id="view_order_tree_discount" model="ir.ui.view">
            <field name="name">sale.order.tree</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_tree"/>
            <field name="arch" type="xml">
                <field name="amount_total" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <field name="amount_total" position="after">
                    <field name="amount_total_with_discounts" sum="Total tax included"/>
                </field>
            </field>
        </record>

        <record id="view_quotation_tree_discount" model="ir.ui.view">
            <field name="name">sale.order.tree</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_quotation_tree"/>
            <field name="arch" type="xml">
                <field name="amount_total" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <field name="amount_total" position="after">
                    <field name="amount_total_with_discounts" sum="Total tax included"/>
                </field>
            </field>
        </record>
    </data>
</openerp>
