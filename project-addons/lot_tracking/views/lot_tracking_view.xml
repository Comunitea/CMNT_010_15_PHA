<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="paperformat_lot_tracking" model="report.paperformat">
            <field name="name">Lot tracking</field>
            <field name="default" eval="True"/>
            <field name="format">custom</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">13</field>
            <field name="margin_bottom">3</field>
            <field name="margin_left">3</field>
            <field name="margin_right">3</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">10</field>
            <field name="dpi">90</field>
        </record>

        <report
            id="action_report_lot_tracking"
            model="lot.tracking"
            string="Lot tracking"
            report_type="qweb-pdf"
            name="lot_tracking.report_lot_tracking"
            attachment_use="False"
        />

        <record id="action_report_lot_tracking" model="ir.actions.report.xml">
            <field name="paperformat_id" ref="paperformat_lot_tracking"/>
        </record>

        <record id="view_lot_tracking_tree" model="ir.ui.view">
            <field name="name">Lot tracking tree</field>
            <field name="model">lot.tracking</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="product_id"/>
                    <field name="lot_id"/>
                    <field name="type_of_move"/>
                    <field name="write_date"/>
                </tree>
            </field>
        </record>

        <record id="view_lot_tracking_form" model="ir.ui.view">
            <field name="name">Lot tracking form</field>
            <field name="model">lot.tracking</field>
            <field name="arch" type="xml">
                <form string="Lot tracking">
                    <sheet class="oe_form_sheet_custom_width_screen">
                        <group cols="4">
                            <group cols="2">
                                <field name="product_id"/>
                                <field name="lot_id"/>
                            </group>
                            <group cols="2">
                                <field name="type_of_move"/>
                                <field name="total"/>
                            </group>
                        </group>
                        <separator string="Lot movements"/>
                        <field name="lot_move_ids">
                            <button onclick="$('div.oe_view_manager_view_form div.oe_view_manager a#button_export_excel').trigger('click');">Export to excel</button>
                            <tree string="Lot movements"
                                  default_order="date"
                                  colors="red:type=='input';green:type=='output';blue:type=='internal'">
                                <field name="date"/>
                                <field name="qty"/>
                                <field name="product_uom"/>
                                <field name="location_id"/>
                                <field name="location_dest_id"/>
                                <field name="partner_id"/>
                                <field name="picking_id"/>
                                <field name="origin"/>
                                <field name="type" invisible="1"/>
                                <field name="state" invisible="1"/>
                            </tree>
                        </field>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_view_lot_tracking" model="ir.actions.act_window">
            <field name="name">Lot tracking</field>
            <field name="res_model">lot.tracking</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_lot_tracking_tree"/>
        </record>

        <menuitem id="menu_view_lot_tracking"
                  parent="quality_management_menu.menu_qc_products"
                  action="action_view_lot_tracking" sequence="3"/>

        <record id="view_lot_tracking_move_form" model="ir.ui.view">
            <field name="name">Lot tracking move form</field>
            <field name="model">stock.lot.move</field>
            <field name="arch" type="xml">
                <form string="Lot tracking move">
                    <sheet>
                        <group cols="4">
                            <group cols="2">
                                <field name="date"/>
                                <field name="qty"/>
                                <field name="product_uom"/>
                                <field name="location_id"/>
                                <field name="location_dest_id"/>
                                <field name="partner_id"/>
                                <field name="picking_id"/>
                                <label for="origin"/>
                                <div>
                                    <field name="origin" class="oe_inline"/>
                                    <button name="action_show_origin"
                                            class="oe_inline"
                                            type="object"
                                            icon="terp-stock_zoom"
                                            style="margin-top: -4px;"
                                            attrs="{'invisible': [('origin', '=', False)]}"
                                    />
                                </div>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</openerp>
