<openerp>
    <data>

        <template id="report_mrp_label">
            <t t-foreach="docs" t-as="o">
                <div class="page">
                    <div class="text-center">
                        <span t-att-style="'font-size:' + name_css_size + 'px; font-weight:bold; font-family: monospace;'" t-field="o.product_id.name"/>
                        <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', o.product_id.default_code, 1000, 500)" style="width:1000px;height:100px"/>
                        <br/>
                        <small t-field="o.product_id.default_code"></small>
                    </div>

                    <div class="text-center">
                        <span t-att-style="'font-size: ' + lot_css_size + 'px; font-weight:bold; font-family: monospace;'" t-field="o.final_lot_id.name"/>
                        <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', o.final_lot_id.name.replace('-', '/'), 1000, 500)" style="width:1000px;height:100px;"/>
                        <br/>
                        <small t-field="o.final_lot_id.name"></small>
                    </div>
                    <div class="text-center">
                        <span style="font-size:30px; font-weight:bold;">Contiene: <span t-esc="o.product_id.box_elements"/> <span t-field="o.product_id.container_id.name"/></span>q
                        <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', gtin, 1000, 500)" style="width:1000px;height:100px"/>
                        <br/>
                        <small t-esc="gtin"></small>
                        <br/>
                        <span style="font-size:30px; font-weight:bold;">Consumir preferentemente antes del fin de: <span t-field="o.final_lot_id.use_date"/></span>
                    </div>
                </div>
            </t>
        </template>


        <report
            id="action_print_mrp_label"
            model="mrp.production"
            string="Mrp labels"
            report_type="qweb-pdf"
            name="quality_protocol_report.report_mrp_label"
            file="quality_protocol_report.report_mrp_label"
            attachment_use="False"
            menu="False"
        />

        <record id="quality_protocol_report.action_print_mrp_label" model="ir.actions.report.xml">
            <field name="paperformat_id" ref="quality_protocol_report.paperformat_mrp_labels"/>
        </record>

    </data>
</openerp>
