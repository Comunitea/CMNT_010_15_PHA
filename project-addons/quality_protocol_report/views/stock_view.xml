<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="stock_production_lot_add_survey_responses" model="ir.ui.view">
            <field name="name">stock.production.lot.form</field>
            <field name="model">stock.production.lot</field>
            <field name="inherit_id" ref="stock.view_production_lot_form"/>
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page string="Responses">
                        <button name="%(action_print_protocol_lot)d" type="action" string="Print protocol"/>
                        <field name="response_ids" />
                    </page>
                </notebook>
            </field>
        </record>

        <record id="view_move_form_add_quality_fields" model="ir.ui.view">
            <field name="name">stock.move.form.add_quality_fields</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="mrp_return_moves.view_move_form_add_return_qty"/>
            <field name="arch" type="xml">
                <field name="date" position="after">
                    <field name="acceptance_date"/>
                    <field name="initials"/>
                </field>
            </field>
        </record>

    </data>
</openerp>
