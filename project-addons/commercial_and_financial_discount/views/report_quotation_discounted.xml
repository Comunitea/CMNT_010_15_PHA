<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="report_sale_layouted" inherit_id="sale.report_saleorder_document">
            <xpath expr="//div[@class='row']/div[@class='col-xs-4 pull-right']" position="replace">
                <div class="row">
                    <div class="col-xs-4 pull-right">
                        <table class="table table-condensed">
                            <tr class="border-black">
                                <td>Amount</td>
                                <td class="text-right">
                                    <span t-field="o.amount_gross_untaxed"
                                        t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                                </td>
                            </tr>
                            <tr>
                                <td>Article discount</td>
                                <td class="text-right">
                                    <span t-field="o.article_discount"
                                        t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                                </td>
                            </tr>
                            <tr>
                                <td>Amount with article discount</td>
                                <td class="text-right">
                                    <span t-field="o.amount_with_article_discount"
                                        t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                                </td>
                            </tr>
                            <tr>
                                <td>Commercial discount <span t-field="o.commercial_discount_percentage"/> %</td>
                                <td class="text-right">
                                    <span t-field="o.commercial_discount_amount"
                                        t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                                </td>
                            </tr>
                            <tr>
                                <td>Net amount</td>
                                <td class="text-right">
                                    <span t-field="o.amount_net_untaxed"
                                        t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                                </td>
                            </tr>
                            <tr>
                                <td>Financial discount <span t-field="o.financial_discount_percentage"/> %</td>
                                <td class="text-right">
                                    <span t-field="o.financial_discount_amount"
                                        t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                                </td>
                            </tr>
                            <tr class="border-black">
                                <td><strong>Total Without Taxes</strong></td>
                                <td class="text-right">
                                    <span t-field="o.amount_untaxed"
                                        t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                                </td>
                            </tr>
                            <tr>
                                <td>Taxes</td>
                                <td class="text-right">
                                    <span t-field="o.amount_tax"
                                        t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                                </td>
                            </tr>
                            <tr class="border-black">
                                <td><strong>Total</strong></td>
                                <td class="text-right">
                                    <span t-field="o.amount_total"
                                        t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </xpath>
       </template>
    </data>
</openerp>
