<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

       <record id="product_template_add_analysis" model="ir.ui.view">
           <field name="name">product.template.form</field>
           <field name="model">product.template</field>
           <field name="inherit_id" ref="quality_management_menu.product_template_form_view_quality_management_menu"/>
           <field name="arch" type="xml">
               <xpath expr="//group[@string='Quality controls']" position="inside">
                    <field name="analytic_certificate"/>
                </xpath>
               <notebook position="inside">
                   <page string="Analysis" attrs="{'invisible': [('analytic_certificate', '=', False)]}">
                       <field name="analysis_ids" nolabel="1" context="{'default_product_id': active_id}">
                           <tree editable="bottom">
                               <field name="analysis_id"/>
                               <field name="show_in_certificate"/>
                               <field name="product_id" invisible="1"/>
                           </tree>
                        </field>
                   </page>
               </notebook>
           </field>
       </record>

       <record id="product_analysis_tree" model="ir.ui.view">
            <field name="name">product.analysis.tree</field>
            <field name="model">product.analysis</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Analysis">
                    <field name="name"/>
                    <field name="method"/>
                </tree>
            </field>
        </record>

        <record id="product_analysis_form" model="ir.ui.view">
            <field name="name">product.analysis.form</field>
            <field name="model">product.analysis</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Analysis">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                            <group>
                                <field name="method"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="product_analysis_view_search" model="ir.ui.view">
            <field name="name">product.analysis.search</field>
            <field name="model">product.analysis</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="">
                   <field name="name"/>
               </search>
            </field>
        </record>

        <record id="product_analysis_action" model="ir.actions.act_window">
            <field name="name">Product analysis</field>
            <field name="res_model">product.analysis</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="product_analysis_tree"/>
            <field name="search_view_id" ref="product_analysis_view_search"/>
        </record>

        <menuitem name="Product analysis" parent="quality_management_menu.menu_quality_management_config" action="product_analysis_action" id="menu_product_analysis"/>

    </data>
</openerp>
