<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="report_stock_lot_analysis_certificate">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="o">
                    <div class="page" style="font-size: 115%;">
                        <div class="row">
                            <div class="col-xs-3">
                                <img t-if="res_company.logo" t-att-src="'data:image/png;base64,%s' % res_company.logo" style="max-height: 45px;"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12 text-center">
                                <h4 style="font-size: 1.3em;">CERTIFICATE ANALYSIS OF RAW MATERIAL / PACKAGING MATERIAL</h4>
                            </div>
                        </div>
                        <div class="row" style="border: 2px solid black; font-size: 1.3em;">
                            <div class="col-xs-8">
                                Product: <span t-field="o.product_id"/> [<span t-field="o.product_id.default_code"/>]
                            </div>
                            <div class="col-xs-4">
                                Lot: <span t-field="o.name"/>
                            </div>
                        </div>

                        <t t-raw="translate_doc(o.id, doc_model, 'write_uid.lang', 'product_analysis.report_stock_lot_analysis_data')"/>

                        <div class="row" style="border: 2px solid black; margin-top: 5px; padding-left: 20px; padding-right: 20px;">
                            <div class="row">
                                <div class="col-xs-12">
                                    <strong><u>Analytic control:</u></strong>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-12">
                                    <style>
                                        #analysis_table.table-bordered > tbody > tr > td,
                                        #analysis_table.table-bordered > thead > tr > th {
                                            border: 1px solid black;
                                        }
                                    </style>
                                    <table class="table table-bordered table-condensed" id="analysis_table" style="margin-botton: 5px;">
                                        <thead>
                                            <tr>
                                                <th>Paramenter</th>
                                                <th class="text-center" style="min-width: 10em;">Method</th>
                                                <th class="text-center">Specification</th>
                                                <th class="text-center">Result</th>
                                            </tr>
                                       </thead>
                                       <tbody style="font-size: 85%;">
                                            <t t-foreach="o.analysis_ids" t-as="analysis">
                                                <tr t-if="analysis.show_in_certificate">
                                                    <td style="padding: 1px;">
                                                        <span t-field="analysis.analysis_id.name"/>
                                                    </td>
                                                    <td class="text-center" style="padding: 1px;">
                                                        <span t-field="analysis.method.name"/>
                                                    </td>
                                                    <td class="text-center" style="padding: 1px;">
                                                        <t t-if="analysis.criterion == 'normal'">
                                                            <span t-field="analysis.expected_result"/>
                                                        </t>
                                                        <t t-if="analysis.criterion != 'normal'">
                                                            <span t-field="analysis.criterion"/>
                                                        </t>
                                                    </td>
                                                    <td class="text-center" style="padding: 1px;">
                                                        <span t-if="analysis.realized and not analysis.result">-</span>
                                                        <span t-field="analysis.result"/>
                                                    </td>
                                                </tr>
                                            </t>
                                        </tbody>
                                    </table>
                                    <div class="col-xs-12" style="min-height: 3em; margin-top: -20px;">
                                        Notes: <span t-field="o.analysis_notes"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-4 col-xs-offset-8">
                                Revised by: <span t-field="o.revised_by"/>
                            </div>
                        </div>

                        <div class="row" style="text-align: left; padding: 0;">
                            <div style="display: inline-block; page-break-inside: avoid; border: 8px double black; padding: 5px 5px 0 5px; margin-top: 15px; width: 60%;">
                                <h4>
                                    Lote <span t-field="o.name"/> <span t-field="o.state"/><span t-if="o.acceptance_date"> el </span><span t-field="o.acceptance_date"/>
                                    <table t-if="o.detail_ids" class="table table-condensed">
                                        <tbody>
                                            <t t-foreach="o.detail_ids" t-as="detail">
                                                <tr>
                                                    <td style="padding: 1px;"><span t-field="detail.date"/></td>
                                                    <td style="padding: 1px;"><span t-field="detail.state"/></td>
                                                    <td style="padding: 1px;"><span t-field="detail.quantity"/></td>
                                                </tr>
                                            </t>
                                        </tbody>
                                    </table>
                                </h4>
                            </div>
                        </div>

                        <style t-if="o.state not in ('approved', 'rejected')">
                            .banner {
                                color: red;
                                font-weight: bolder;
                                font-size: 90px;
                                text-align: center;
                                position: absolute;
                                top: 200px;
                                -webkit-transform: rotate(-45deg);
                                opacity: 0.3;
                            }
                        </style>
                        <div class="banner" t-if="o.state not in ('approved', 'rejected')">PENDIENTE DE CALIFICAR</div>
                    </div>

                    <div class="footer">
                        <div class="row">
                            <div class="col-xs-4 col-xs-offset-4 col-xs-height col-bottom">
                                <span>person who enters the data</span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-2">
                                <span>F-01-DT-001-00</span>
                            </div>
                            <div class="col-xs-4 col-xs-offset-6 text-center" style="border-top: 1px solid black; margin-top: 20px;">
                                <span>signature and date</span>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </template>
    </data>
</openerp>
