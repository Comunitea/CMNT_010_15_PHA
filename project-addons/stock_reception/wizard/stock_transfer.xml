<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_stock_enter_transfer_details" model="ir.ui.view">
            <field name="name">Enter transfer details</field>
            <field name="model">stock.transfer_details</field>
            <field name="inherit_id" ref="stock.view_stock_enter_transfer_details"/>
            <field name="arch" type="xml">
                <field name="lot_id" position="before">
                    <field name="is_incoming" invisible="1"/>
                </field>
                <field name="lot_id" position="attributes">
                    <attribute name="attrs">{'required': [('is_incoming', '=', True)]}</attribute>
                </field>
            </field>
        </record>

    </data>
</openerp>
