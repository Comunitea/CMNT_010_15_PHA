<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_partner_form" model="ir.ui.view">
            <field name="name">map.button.res.partner.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="partner_external_maps.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@string='Route Map']" position="replace">
                </xpath>
            </field>
        </record>
        <record id="view_partner_tree_custom_permissions" model="ir.ui.view">
            <field name="name">res.partner.tree.custom_permissions</field>
            <field name="model">res.partner</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="base.view_partner_tree"/>
            <field name="groups_id" eval="[(6, 0, [ref('group_salesman_ph') ])]"/>
            <field name="arch" type="xml">
                <tree string="Contacts" position="attributes">
                    <attribute name="create">false</attribute>
                </tree>
            </field>
        </record>
        <record id="view_partner_form_custom_permissions" model="ir.ui.view">
            <field name="name">res.partner.form.custom_permissions</field>
            <field name="model">res.partner</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="groups_id" eval="[(6, 0, [ref('group_salesman_ph') ])]"/>
            <field name="arch" type="xml">
                <form string="Partners" position="attributes">
                    <attribute name="create">false</attribute>
                </form>
            </field>
        </record>
    </data>
</openerp>