<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="product_template_kanban_view_salesmanph" model="ir.ui.view">
            <field name="name">Product.template.product.kanban.salesmanph</field>
            <field name="model">product.template</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="image_small"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_vignette oe_semantic_html_override">
                                <a type="open"><img t-att-src="kanban_image('product.template', 'image_medium', record.id.value)" class="oe_kanban_image_medium"/></a>
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open">
                                             <field name="name"/>
                                        </a>
                                    </h4>
                                    <div name="tags"/>
                                    <ul>
                                        <li>EAN13: <field name="ean13"></field></li>
                                        <li>CN: <field name="cn_code"></field></li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
    </data>
</openerp>