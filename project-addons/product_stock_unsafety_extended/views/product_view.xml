<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="product_stock_unsafety_extended_css"
                  name="Product stock unsafety extended custom css"
                  inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <link rel="stylesheet" href="/product_stock_unsafety_extended/static/src/css/style.css"/>
            </xpath>
        </template>

        <record id="psue_product_product_tree_view" model="ir.ui.view">
            <field name="name">Product stock unsafety extended, product tree</field>
            <field name="model">product.product</field>
            <field name="arch" type="xml">
                <tree string="Products stock">
                    <field name="name"/>
                    <field name="default_code"/>
                    <field name="ean13"/>
                    <field name="categ_id"/>
                    <field name="stock_by_day"/>
                    <field name="bom_is_member_of"/>
                    <button name="product_stock_unsafety_extended.action_bom_member_of_wizard"
                            string="BoM member of"
                            type="action"
                            icon="gtk-dnd-multiple"
                    />
                    <field name="qty_available"/>
                    <field name="virtual_available"/>
                    <field name="uom_id"/>
                </tree>
            </field>
        </record>

        <record id="action_psue_product_product_tree_view" model="ir.actions.act_window">
            <field name="name">Products stock/day</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.product</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="view_id" ref="psue_product_product_tree_view"/>
            <field name="domain">[('type', '=', 'product')]</field>
            <field name="context">{'psue_stock_by_day_view': True}</field>
        </record>

        <menuitem id="menu_view_product_unsafety_list"
                  parent="stock.menu_stock_sched"
                  action="action_psue_product_product_tree_view" sequence="62"/>
    </data>
</openerp>
