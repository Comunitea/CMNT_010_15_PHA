    <data>
        <!-- Buttons to print ECI report -->
        <record id="view_order_form_report_button" model="ir.ui.view">
            <field name="name">view_order_form_report_button</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <button name="invoice_cancel" position="after">
                    <button name="print_eci_report" string="Print ECI report" type="object" icon="STOCK_PRINT"/>
                </button>
            </field>
        </record>
    </data>
</openerp>
