<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
   
    <template id="palet_tag_report">

     <style type="text/css">
        #container{
            height:100%;
            width:100%;
            position:relative;
            border-style: solid 1px;;
        }
        .tag-block{
            height: 50%;
            width: 50%;
            float: left;
            box-sizing: border-box;
                -moz-box-sizing: border-box;
                -webkit-box-sizing: border-box;
                -ms-box-sizing: border-box;
            border: 1px solid #000;
        }
        .table-content{
            width: 100%;
            height:50%;
            border: 1px solid #000;
            
        }
        .barcode-content{
            width: 100%;
            height:50%;
            display:table;
        }
        .bc-center{
            display:table-cell;
            vertical-align:middle;
            text-align:center;
        }
        .tag-table{
            width: 100%;
            height:100%;
            border-collapse: collapse;
        }
        .tag-table tr{
            height:33%;
        }
        .tag-table td.td-left{
             width: 30%;
             border: 1px solid #000;
        }
        .tag-table td.td-right{
             width: 70%;
             border: 1px solid #000;
        }
    
    </style>

        <t t-foreach="docs" t-as="o">
            <div class="page">
                <div id="container">
                        <div class="tag-block">
                            <div class="table-content">

                                <table class="tag-table">

                                    <tr>
                                        <td colspan="2">Primera fila</td>
                                    </tr>
          
                              
                                    <tr>
                                       <td class="td-left">1</td>
                                       <td class="td-right">2</td>
                                    </tr>
                                    <tr>
                                       <td class="td-left">3</td>
                                       <td class="td-right">4</td>
                                    </tr>
                                </table>

                            </div>
                            <div class="barcode-content">
                                <div class="bc-center">
                                    <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', o.name, 600, 100)" style="width:300px;height:50px"/>
                                </div>  
                            </div>  

                        </div>

                         <div class="tag-block">
                            
                        </div>
                        <div class="tag-block">
                        
                        </div>
                         <div class="tag-block">
                         
                        </div>
                </div>
            </div>
        </t>
    </template>

    </data>
</openerp>
