<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

       <record id="mrp_review_production_tree" model="ir.ui.view">
            <field name="name">mrp.review.production.tree</field>
            <field name="model">mrp.review.production</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="production revision">
                    <field name="state" invisible="1"/>
                    <field name="final_lot_id"/>
                    <field name="name"/>
                    <field name="review_state"/>
                </tree>
            </field>
        </record>

        <record id="mrp_review_production_form" model="ir.ui.view">
            <field name="name">mrp.review.production.form</field>
            <field name="model">mrp.review.production</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="production revision">
                    <header>
                        <field name="prod_review_ok" invisible="1"/>
                        <field name="state" invisible="1"/>
                        <button name="production_review" string="production review" type="object"
                                attrs="{'invisible': ['|', ('state', 'not in', ('in_review')), ('prod_review_ok', '=', True)]}"/>
                        <field name="review_state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="production_id"/>
                            <field name="product_id"/>
                            <field name="final_lot_id"/>
                        </group>
                        <group string="Production logs">
                            <field name="production_log_ids" colspan="4" nolabel="1">
                                <tree editable="top">
                                    <field name="date"/>
                                    <field name="start_hour" widget="float_time"/>
                                    <field name="end_hour" widget="float_time"/>
                                    <field name="total_qty"/>
                                    <field name="worker"/>
                                </tree>
                            </field>
                        </group>
                        <group string="stops and adjustements in infusions production">
                            <field name="production_adjustement_ids" colspan="4" nolabel="1">
                                <tree editable="top">
                                    <field name="start_date"/>
                                    <field name="name"/>
                                    <field name="reanudation_date"/>
                                    <field name="initials"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="mrp_review_production_filter" model="ir.ui.view">
            <field name="name">mrp.review.production.form</field>
            <field name="model">mrp.review.production</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search>
                    <field name="product_id"/>
                    <field name="final_lot_id"/>
                    <field name="review_state"/>
                    <filter string="Draft" name="draft" domain="[('review_state','=','draft')]"/>
               </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_mrp_review_production">
            <field name="name">production review</field>
            <field name="res_model">mrp.review.production</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="mrp_review_production_tree"/>
            <field name="search_view_id" ref="mrp_review_production_filter"/>
            <field name="context">{'search_default_draft': 1}</field>
        </record>

        <menuitem id="menu_mrp_production_rev" name="production review" string="production review"
            action="action_mrp_review_production" parent="menu_mrp_final_revision" sequence="2"/>

    </data>
</openerp>
