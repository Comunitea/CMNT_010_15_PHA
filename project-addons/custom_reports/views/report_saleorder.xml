<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="report_saleorder_document">
            <!-- Multicompany -->
            <t t-if="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id"></t>
            </t>
            <t t-if="not o or not 'company_id' in o">
                <t t-set="company" t-value="res_company"></t>
            </t>

            <div class="header">
                <div class="row">
                    <div class="col-xs-3">
                        <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo" style="max-height: 45px;"/>
                    </div>
                    <div class="list-inline pull-right" style="padding: 20px 10px 0 0;">
                        <li>Page:</li>
                        <li><span class="page"/></li>
                        <li>/</li>
                        <li><span class="topage"/></li>
                    </div>
                </div>
                <div class="row zero_min_height">
                    <div class="col-xs-12">
                        <div style="border-bottom: 1px solid black;"></div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-5">
                        <style>
                            div#company_address {
                                font-size: 10px;
                            }
                            div#company_address p {
                                margin: 1.5px 0;
                            }
                            a {
                                color: black;
                            }
                        </style>
                        <div id="company_address">
                            <p>
                                <span t-field="company.partner_id.name"></span>
                            </p>
                            <p>
                                <i class="glyphicon glyphicon-map-marker"></i>
                                <span t-field="company.partner_id.street"></span>
                            </p>
                            <p>
                                <span t-field="company.partner_id.zip" style="margin-left: 13px;"></span>
                                <span t-field="company.partner_id.city"></span> -
                                <span t-field="company.partner_id.state_id"></span>
                                (<span t-field="company.partner_id.country_id"></span>)
                            </p>
                            <p>
                                <t t-if="company.partner_id.phone">
                                    <i class="glyphicon glyphicon-earphone"></i>
                                    <span t-field="company.partner_id.phone"></span>
                                </t>
                                <t t-if="company.partner_id.phone and company.partner_id.fax"><span> /</span></t>
                                <t t-if="company.partner_id.fax">
                                    <i class="glyphicon glyphicon-print"></i>
                                    <span t-field="company.partner_id.fax"></span>
                                </t>
                            </p>
                            <p t-if="company.partner_id.website">
                                <i class="glyphicon glyphicon-globe"></i>
                                <a t-field="company.partner_id.website"></a>
                            </p>
                            <p t-if="company.partner_id.email">
                                <i class="glyphicon glyphicon-envelope"></i>
                                <a t-field="company.partner_id.email"></a>
                            </p>
                            <p>
                                <i class="glyphicon glyphicon-briefcase"></i>
                                <span t-field="company.partner_id.vat"/>
                            </p>
                        </div>
                    </div>
                    <div class="col-xs-6 col-xs-offset-1" style="margin-top: 25px; min-height: 120px;">
                        <t t-if="o.partner_shipping_id">
                            <strong>Shipping address:</strong>
                            <div t-field="o.partner_shipping_id"
                                 t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'/>
                        </t>
                    </div>
                </div>
            </div>

            <div class="page">
                <div class="oe_structure"/>
                <style>
                    a {
                        color: black;
                    }
                </style>
                <div class="row">
                    <div class="col-xs-12">
                        <t t-if="not o.transfer">
                            <h2 t-if="o.state not in ['draft','sent']">Order Nº <span t-field="o.name"/></h2>
                            <h2 t-if="o.state in ['draft','sent']">Quotation N° <span t-field="o.name"/></h2>
                        </t>
                        <t t-if="o.transfer">
                            <h2>Transfer order N° <span t-field="o.name"/></h2>
                        </t>
                        <div style="border-bottom: 2px solid black; margin-bottom: 10px;"></div>
                    </div>
                </div>

                <div t-if="o.transfer" class="row" style="border-bottom: 1px solid black; padding-bottom: 10px; margin-bottom: 10px;">
                    <div class="col-xs-5">
                        <strong>Cooperative address:</strong><br/>

                        <span t-field="o.notified_partner_id.name"></span><br/>

                        <i class="glyphicon glyphicon-map-marker"></i>
                        <span t-field="o.notified_partner_id.street"></span><br/>

                        <span t-field="o.notified_partner_id.zip" style="margin-left: 17px;"></span>
                        <span t-field="o.notified_partner_id.city"></span> -
                        <span t-field="o.notified_partner_id.state_id"></span>
                        (<span t-field="o.notified_partner_id.country_id"></span>)<br/>

                        <t t-if="o.partner_id.phone">
                            <i class="glyphicon glyphicon-earphone"></i>
                            <span t-field="o.notified_partner_id.phone"></span>
                        </t>
                        <t t-if="o.partner_id.phone and o.partner_id.fax"><span> /</span></t>
                        <t t-if="o.partner_id.fax">
                            <i class="glyphicon glyphicon-print"></i>
                            <span t-field="o.notified_partner_id.fax"></span><br/>
                        </t>

                        <t t-if="o.partner_id.website">
                            <i class="glyphicon glyphicon-globe"></i>
                            <a t-field="o.notified_partner_id.website"></a><br/>
                        </t>

                        <t t-if="o.partner_id.email">
                            <i class="glyphicon glyphicon-envelope"></i>
                            <a t-field="o.notified_partner_id.email"></a>
                        </t>
                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-5">
                        <strong>Invoicing address:</strong><br/>

                        <span t-field="o.partner_invoice_id.name"></span><br/>

                        <i class="glyphicon glyphicon-map-marker"></i>
                        <span t-field="o.partner_invoice_id.street"></span><br/>

                        <span t-field="o.partner_invoice_id.zip" style="margin-left: 17px;"></span>
                        <span t-field="o.partner_invoice_id.city"></span> -
                        <span t-field="o.partner_invoice_id.state_id"></span>
                        (<span t-field="o.partner_invoice_id.country_id"></span>)<br/>

                        <t t-if="o.partner_id.phone">
                            <i class="glyphicon glyphicon-earphone"></i>
                            <span t-field="o.partner_invoice_id.phone"></span>
                        </t>
                        <t t-if="o.partner_id.phone and o.partner_id.fax"><span> /</span></t>
                        <t t-if="o.partner_id.fax">
                            <i class="glyphicon glyphicon-print"></i>
                            <span t-field="o.partner_invoice_id.fax"></span><br/>
                        </t>

                        <t t-if="o.partner_id.website">
                            <i class="glyphicon glyphicon-globe"></i>
                            <a t-field="o.partner_invoice_id.website"></a><br/>
                        </t>

                        <t t-if="o.partner_id.email">
                            <i class="glyphicon glyphicon-envelope"></i>
                            <a t-field="o.partner_invoice_id.email"></a><br/>
                        </t>

                        <t t-if="o.partner_id.vat">
                            <i class="glyphicon glyphicon-briefcase"></i>
                            <span t-field="o.partner_invoice_id.vat"/>
                        </t>
                    </div>
                    <div class="col-xs-3">
                        <p t-if="o.partner_id.ref"><strong>Client code:</strong> <span t-field="o.partner_id.ref"></span></p>
                        <p style="min-height: 40px;"><strong>Quotation reference:</strong> <span t-field="o.client_order_ref"></span></p>
                        <p t-if="o.partner_id.customer_payment_mode">
                            <strong>Payment mode:</strong><br/>
                            <span t-field="o.partner_id.customer_payment_mode.name"/><br/>
                            <t t-if="not o.partner_id.customer_payment_mode.hide_account_at_invoice">
                                <span t-field="o.partner_id.customer_payment_mode.bank_id.bank_name"/><br/>
                                BIC: <span t-field="o.partner_id.customer_payment_mode.bank_id.bank_bic"/><br/>
                                <span t-field="o.partner_id.customer_payment_mode.bank_id.acc_number" style="display: inline-block; width: 260px;"/>
                            </t>
                        </p>
                    </div>
                    <div class="col-xs-4">
                        <div t-if="o.date_order">
                            <strong t-if="o.state not in ['draft','sent']">Date Ordered:</strong>
                            <strong t-if="o.state in ['draft','sent']">Quotation Date:</strong>
                            <p t-field="o.date_order"/>
                        </div>
                        <div t-if="o.payment_term">
                            <strong>Closing date:</strong>
                            <p>
                                <span t-field="o.closing_date"/>
                                (<span t-field="o.payment_term"/>)
                            </p>
                        </div>
                        <div t-if="o.user_id.name">
                            <strong>Salesperson:</strong>
                            <p t-field="o.user_id.name"/>
                        </div>
                    </div>
                </div>
                <div class="row" style="width: 100%; height: 20px;">
                    <br/>
                </div>
                <style>
                    table thead > tr {
                        border-bottom: 2px solid black;
                    }
                    table.table-condensed td {
                        padding: 0 !important;
                    }
                    table.details tbody > tr {
                        font-size: 12px;
                    }
                </style>
                <table t-if="not o.transfer" class="table table-condensed details">
                    <thead>
                        <tr>
                            <th>CN Code</th>
                            <th>Description / EAN13</th>
                            <th>Taxes</th>
                            <th class="text-right">Quantity</th>
                            <th class="text-right">Unit price</th>
                            <th class="text-right" groups="sale.group_discount_per_so_line">Disc.(%)</th>
                            <th class="text-right">Price w/discount</th>
                            <th class="text-right">Price</th>
                        </tr>
                   </thead>
                   <tbody class="sale_tbody">
                        <tr t-foreach="o.order_line" t-as="l">
                            <td>
                                <span t-field="l.product_id.cn_code"/>
                            </td>
                            <td>
                                <span t-field="l.name"/><br/>
                                <span t-field="l.product_id.ean13"/>
                            </td>
                            <td>
                                <span t-esc="', '.join(map(lambda x: x.name, l.tax_id))"/>
                            </td>
                            <td class="text-right">
                                <span t-esc="'%g' % l.product_uom_qty"/><br/>
                                <span groups="product.group_uom" t-field="l.product_uom"/>
                            </td>
                            <td class="text-right">
                                <span t-esc="'%g' % l.price_unit"/>
                            </td>
                            <td class="text-right" groups="sale.group_discount_per_so_line">
                                <span t-esc="'%g' % l.discount" style="padding-left: 10px;"/>
                            </td>
                            <td class="text-right">
                                <span t-field="l.discounted_amount"
                                    t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                            </td>
                            <td class="text-right">
                                <span t-field="l.gross_amount"
                                    t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <table t-if="o.transfer" class="table table-condensed details">
                    <thead>
                        <tr>
                            <th>CN Code</th>
                            <th>Description</th>
                            <th class="text-right">Quantity</th>
                            <th class="text-right">Promo</th>
                            <th class="text-right">Unit of measure</th>
                        </tr>
                    </thead>
                    <tbody class="sale_tbody">
                        <t t-set="prev_product_id" t-value="0"/>
                        <tr t-foreach="o.order_line" t-as="l">
                            <t t-if="l.product_id.id != prev_product_id">
                                <t t-set="prev_product_id" t-value="l.product_id.id"/>
                                <t t-set="cn_code" t-value="l.product_id.cn_code"/>
                                <t t-set="name" t-value="l.name"/>
                                <t t-set="uom" t-value="l.product_uom.name"/>
                                <t t-if="not l.promotion_line">
                                    <t t-set="promo" t-value="0"/>
                                </t>
                            </t>
                            <t t-if="l.promotion_line">
                                <t t-set="promo" t-value="l.product_uom_qty"/>
                                <t t-set="quantity" t-value="0"/>
                            </t>
                            <t t-if="not l.promotion_line">
                                <t t-set="quantity" t-value="l.product_uom_qty"/>
                            </t>
                            <t t-if="quantity > 0">
                                <td>
                                   <span t-esc="cn_code"/>
                                </td>
                                <td>
                                   <span t-esc="name"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="'%g' % quantity"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="'%g' % promo"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="uom"/>
                                </td>
                                <t t-set="promo" t-value="0"/>
                                <t t-set="quantity" t-value="0"/>
                            </t>
                        </tr>
                    </tbody>
                </table>

                <div t-if="not o.transfer" class="row">
                    <div class="col-xs-5 pull-right">
                        <table class="table table-condensed">
                            <tr class="border-black">
                                <td>Amount</td>
                                <td class="text-right">
                                    <span t-field="o.amount_gross_untaxed"
                                        t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                                </td>
                            </tr>
                            <tr>
                                <td>Article discount</td>
                                <td class="text-right">
                                    <span t-field="o.article_discount"
                                        t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                                </td>
                            </tr>
                            <tr>
                                <td>Amount with article discount</td>
                                <td class="text-right">
                                    <span t-field="o.amount_with_article_discount"
                                        t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                                </td>
                            </tr>
                            <tr>
                                <td><span t-field="o.commercial_discount_display"/></td>
                                <td class="text-right">
                                    <span t-field="o.commercial_discount_amount"
                                        t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                                </td>
                            </tr>
                            <tr>
                                <td>Net amount</td>
                                <td class="text-right">
                                    <span t-field="o.amount_net_untaxed"
                                        t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                                </td>
                            </tr>
                            <tr>
                                <td><span t-field="o.financial_discount_display"/></td>
                                <td class="text-right">
                                    <span t-field="o.financial_discount_amount"
                                        t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                                </td>
                            </tr>
                            <tr class="border-black">
                                <td><strong>Total Without Taxes</strong></td>
                                <td class="text-right">
                                    <span t-field="o.amount_untaxed"
                                        t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                                </td>
                            </tr>
                            <tr>
                                <td>Taxes</td>
                                <td class="text-right">
                                    <span t-field="o.amount_tax"
                                        t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                                </td>
                            </tr>
                            <tr class="border-black">
                                <td><strong>Total</strong></td>
                                <td class="text-right">
                                    <strong t-field="o.amount_total"
                                        t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
                <span><strong>Observations:</strong></span>
                <p t-field="o.note"/>
                <!-- p t-if="o.payment_term.note">
                    <strong>Payment Term:</strong>
                    <span t-field="o.payment_term.note"/>
                </p -->
                <div class="oe_structure"/>
            </div>

            <div class="footer">
                <style>
                    a {
                        color: black;
                    }
                </style>
                <div style="position: relative; border-top: 1px solid black;">
                    <div style="position: absolute; top: 4px; left: 0;">
                        <t t-foreach="company.header_image" t-as="h_image">
                            <t t-if="h_image.name[:12] == 'footer_image'">
                                <span t-field="h_image.img" t-field-options='{"widget": "image"}'/>
                            </t>
                        </t>
                    </div>
                    <div style="margin-left: 90px;">
                        <p style="font-size: 12px; margin: 5px 0; padding: 0;">
                            For any doubt or explanation, be contacted with Sales Dept. in the number <b><span t-field="company.phone"/></b>, or by e-mail at <a href="mailto:ventas@pharmadus.com">ventas@pharmadus.com</a>.
                        </p>
                        <p style="font-size: 8px; margin: 0; padding: 0;">
                            Recorded in the Companies Registry of <span t-field="company.partner_id.es_registro_mercantil"/>,
                            Volume <span t-field="company.partner_id.es_tomo"/>,
                            Registration <span t-field="company.partner_id.es_seccion"/>,
                            Folio <span t-field="company.partner_id.es_folio"/>,
                            Sheet Number <span t-field="company.partner_id.es_hoja"/>,
                            TIN <span t-field="company.partner_id.vat"/>
                        </p>
                        <p style="font-size: 8px; margin: 0; padding: 0;">
                            In observance of the Organic law 15/1999 of 13 December on the Protection of Personal Data, we inform you that the contact details hereby provided are included in a file owned by the entity indicated in the head of this document, duly registered into the General Registry of the Protection of Data of Personal Character with number 2061730537. The purpose of the treatment of the information will be that of execution of the contracted services, not being yielded to third parties. Notwithstanding the aforementioned, you are acknowledged to have and may exercise the rights of access, cancellation, rectification and opposition, in the terms and conditions stated in the law, by writing to the address previously indicated.
                        </p>
                        <p style="font-size: 8px; margin: 0; padding: 0;">
                            In agreement with the law 11/97 of packings and residues of packings, we inform that the last supplier of the packing will be the manager of the management of the residue.
                        </p>
                    </div>
                </div>
            </div>
        </template>

        <!-- Trampota, para reemplazar el report original con el nuestro -->
        <template id="sale.report_saleorder">
            <t t-call="report.html_container">
                <t t-foreach="doc_ids" t-as="doc_id">
                    <t t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'custom_reports.report_saleorder_document')"/>
                </t>
            </t>
        </template>
    </data>
</openerp>
