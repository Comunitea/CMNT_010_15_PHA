<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="custom_reports_view_picking_form" model="ir.ui.view">
            <field name="name">Custom reports - Picking form, button for print labels</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <button name="do_print_picking" position="after">
                    <button name="%(custom_reports.action_report_lot_labels)d"
                            string="Print lots labels"
                            type="action"
                            class="oe_highlight"
                            attrs="{'invisible': ['|', '|', ('picking_type_code', '!=', 'incoming'), ('state', '!=', 'done'), ('company_id', '!=', 1)]}"/>
                    <button name="%(custom_reports.action_report_lot_labels_biosalud)d"
                            string="Print lots labels"
                            type="action"
                            class="oe_highlight"
                            attrs="{'invisible': ['|', '|', ('picking_type_code', '!=', 'incoming'), ('state', '!=', 'done'), ('company_id', '!=', 6)]}"/>
                </button>
            </field>
        </record>
    </data>
</openerp>