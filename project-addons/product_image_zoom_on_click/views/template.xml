<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="assets_backend" inherit_id="website.assets_backend" name="Image zoom on click" customize_show="False">
            <xpath expr="." position="inside">
                <!-- For zoom -->
                <script type="text/javascript" src="/product_image_zoom_on_click/static/src/js/product_zoom.js"></script>
                <link rel='stylesheet' href='/product_image_zoom_on_click/static/src/css/zoom.css'></link>
            </xpath>
        </template>

        <record id="image_zoom_product_template_form_view" model="ir.ui.view">
            <field name="name">Image zoom - Product template form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <field name="image_medium" position="attributes">
                    <attribute name="class">
                        oe_avatar oe_left zoom image_zoom
                    </attribute>
                </field>
            </field>
        </record>
    </data>
</openerp>

