<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="pre_customer_form" model="ir.ui.view">
            <field name="name">pre-Customer form</field>
            <field name="model">res.partner</field>
            <field name="priority">1</field>
            <field name="arch" type="xml">
                <form string="pre-Customer">
                    <sheet>
                        <field name="image" widget='image' class="oe_left oe_avatar" options='{"preview_image": "image_medium", "size": [90, 90]}'/>
                        <div class="oe_title oe_left">
                            <h1>
                                <field name="name" default_focus="1" placeholder="Name" />
                            </h1>
                            <field name="category_id" widget="many2many_tags" placeholder="Tags..."/>
                        </div>
                        <group>
                            <group>
                                <label for="street" string="Address"/>
                                <div>
                                    <field name="street" placeholder="Street..."/>
                                    <field name="street2"/>
                                    <div class="address_format">
                                        <field name="city" placeholder="City" style="width: 40%%"/>
                                        <field name="state_id" class="oe_no_button" placeholder="State" style="width: 37%%" options='{"no_open": True}' on_change="onchange_state(state_id)"/>
                                        <field name="zip" placeholder="ZIP" style="width: 20%%"/>
                                    </div>
                                    <field name="country_id" placeholder="Country" class="oe_no_button" options='{"no_open": True, "no_create": True}'/>
                                </div>
                                <field name="website" widget="url" placeholder="e.g. www.odoo.com"/>
                            </group>
                            <group>
                                <field name="phone"/>
                                <field name="mobile"/>
                                <field name="fax"/>
                                <field name="email" widget="email"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_pre_customer_form" model="ir.actions.act_window">
            <field name="name">pre-Customers</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="domain">[('pre_customer', '=', True)]</field>
            <field name="context">{'default_pre_customer': True}</field>
            <field name="search_view_id" ref="base.view_res_partner_filter"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a customer in the pre-customers address book.
              </p>
            </field>
        </record>

        <record id="action_pre_customer_tree_view" model="ir.actions.act_window.view">
            <field name="sequence" eval="0"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="base.view_partner_tree"/>
            <field name="act_window_id" ref="action_pre_customer_form"/>
        </record>
        <record id="action_pre_customer_form_view" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="pre_customer_form"/>
            <field name="act_window_id" ref="action_pre_customer_form"/>
        </record>
        <record id="action_pre_customer_kanban_view" model="ir.actions.act_window.view">
            <field name="sequence" eval="2"/>
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="base.res_partner_kanban_view"/>
            <field name="act_window_id" ref="action_pre_customer_form"/>
        </record>

        <menuitem id="menu_pre_customer_form" parent="base.menu_sales" action="action_pre_customer_form" sequence="4"/>
    </data>
</openerp>